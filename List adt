class ListADT:
    def __init__(self):
        self.my_list = []

    def display(self):
        print("Elements in the list:", self.my_list)

    def insert_at_end(self):
        element = int(input("Enter the element to insert at end: "))
        self.my_list.append(element)
        print(f"After insertion at end: {self.my_list}")

    def insert_at_position(self):
        element = int(input("Enter the element to insert: "))
        position = int(input("Enter the position to insert at: "))
        if 0 <= position <= len(self.my_list):
            self.my_list.insert(position, element)
            print(f"After insertion at position {position}: {self.my_list}")
        else:
            print("Invalid position!")

    def delete_from_end(self):
        if self.my_list:
            self.my_list.pop()
            print(f"After deletion from end: {self.my_list}")
        else:
            print("List is empty!")

    def delete_from_position(self):
        position = int(input("Enter the position to delete from: "))
        if 0 <= position < len(self.my_list):
            self.my_list.pop(position)
            print(f"After deletion at position {position}: {self.my_list}")
        else:
            print("Invalid position!")

    def search_element(self):
        element = int(input("Enter the element to search: "))
        if element in self.my_list:
            index = self.my_list.index(element)
            print(f"Element {element} is available in position {index}")
        else:
            print(f"Element {element} not found in the list")

    def modify_element(self):
        position = int(input("Enter the position to modify: "))
        new_value = int(input("Enter the new value: "))
        if 0 <= position < len(self.my_list):
            self.my_list[position] = new_value
            print(f"After modification at position {position}: {self.my_list}")
        else:
            print("Invalid position!")


# Main loop to interact with the user
adt = ListADT()
while True:
    print("\nChoose an operation:")
    print("1. Insert at end")
    print("2. Insert at position")
    print("3. Delete from end")
    print("4. Delete from position")
    print("5. Search element")
    print("6. Modify element")
    print("7. Display list")
    print("8. Exit")
    
    choice = int(input("Enter your choice: "))
    
    if choice == 1:
        adt.insert_at_end()
    elif choice == 2:
        adt.insert_at_position()
    elif choice == 3:
        adt.delete_from_end()
    elif choice == 4:
        adt.delete_from_position()
    elif choice == 5:
        adt.search_element()
    elif choice == 6:
        adt.modify_element()
    elif choice == 7:
        adt.display()
    elif choice == 8:
        print("Exiting the program.")
        break
    else:
        print("Invalid choice! Please try again.")


